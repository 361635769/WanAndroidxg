<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#2f2f2f"
            android:text="我的"
            android:layout_marginLeft="@dimen/px25"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/homesearch"
            android:layout_width="@dimen/px44"
            android:layout_height="@dimen/px44"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_search"
            android:layout_marginTop="@dimen/px18"
            android:layout_marginRight="@dimen/px18"
            />
    </RelativeLayout>





    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/px150"
        >

        <ImageView
            android:layout_marginTop="@dimen/px30"
            android:layout_width="@dimen/px200"
            android:layout_height="@dimen/px200"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"/>


        <TextView
            android:id="@+id/logintv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80"
            android:gravity="center"
            android:text="登录"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80"
            android:gravity="center"
            android:text="收藏"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/aboutlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80"
            android:gravity="center"
            android:text="关于"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>

    </LinearLayout>






</LinearLayout>
